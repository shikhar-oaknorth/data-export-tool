{
  "manifest_version": 3,
  "name": "JSON Export Tool",
  "description": "One-click JSON download of tables & key/value fields from Mambu and Nucleus UI.",
  "version": "1.0.0",
  "author": "Shikhar Agarwal",
  "action": {
    "default_title": "Export JSON",
    "default_icon": {
      "16": "src/icon.svg",
      "32": "src/icon.svg",
      "48": "src/icon.svg",
      "128": "src/icon.svg"
    },
    "default_popup": "popup.html"
  },
  "permissions": [
    "scripting",
    "activeTab",
    "downloads"
  ],
  "host_permissions": [
    "https://mambu.oaknorth-it.com/*",
    "https://nucleus.oaknorth.co.uk/*"
  ]
}